{
    "name": "@equo/equo-monaco-editor",
    "version": "0.1.2",
    "description": "Monaco Editor for Eclipse",
    "license": "UNLICENSED",
    "publishConfig": {
        "access": "restricted",
        "registry": "http://localhost:4873"
    },
    "main": "./lib/index.js",
    "typings": "./lib/index",
    "files": [
        "/lib"
    ],
    "dependencies": {
        "@equo/websocket": "^0.1.0",
        "cpx": "^1.5.0",
        "css-loader": "^3.4.2",
        "file-loader": "^5.0.2",
        "monaco-editor": "^0.20.0",
        "monaco-editor-webpack-plugin": "^1.9.0",
        "monaco-languageclient": "^0.11.0",
        "normalize-url": "^5.0.0",
        "reconnecting-websocket": "^3.2.2",
        "style-loader": "^1.1.3",
        "typescript": "^3.8.3",
        "vscode-ws-jsonrpc": "^0.1.1",
        "webpack": "^4.42.0",
        "webpack-cli": "^3.3.11"
    },
    "scripts": {
        "prepare": "yarn run clean && yarn run build",
        "clean": "rimraf ../resources && rimraf lib",
        "build": "yarn run compile && webpack && yarn run copy",
        "compile": "tsc",
        "copy": "cpx src/index.html ../resources/ && cp -avr lib/* ../resources/",
        "prepublishOnly": "yarn run dist:amd",
        "dist:amd": "tsc --outDir dist/amd --module amd"
    }
}
